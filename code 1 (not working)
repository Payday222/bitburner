var targetserver = ns.getServer;
var securitylevel = ns.getServerSecurityLevel
async function weaken() {
  ns.weaken(ns.getServer);
  return 0;
}
async function hack() {
  await ns.hack(targetserver);
  return 0;
}

async function sleep() {
  return new Promise(resolve => setTimeout(resolve, 1000));
  return 0;
}
export async function main(ns) {
  while (securitylevel < 2) {
    if (securitylevel > 2.000) {
    } else {
      hack()
      sleep()
    }
    weaken()
    sleep()
  }
  return 0;
}
